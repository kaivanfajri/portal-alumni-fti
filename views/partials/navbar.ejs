<!-- JavaScript to toggle dropdown visibility -->
<script>
    document.getElementById('informasi-dropdown').addEventListener('click', function (e) {
        // Preventing the event from bubbling up to the parent
        e.stopPropagation();

        const dropdownMenu = this.querySelector('ul');
        const arrowIcon = document.getElementById('dropdown-arrow');

        // Toggle visibility of dropdown menu
        dropdownMenu.classList.toggle('hidden');

        // Toggle the arrow icon direction
        if (dropdownMenu.classList.contains('hidden')) {
            arrowIcon.classList.remove('fa-chevron-up');
            arrowIcon.classList.add('fa-chevron-down');
        } else {
            arrowIcon.classList.remove('fa-chevron-down');
            arrowIcon.classList.add('fa-chevron-up');
        }
    });

    // Close the dropdown if user clicks anywhere outside of the dropdown
    window.addEventListener('click', function (e) {
        const dropdownMenu = document.querySelector('.dropdown-content');
        const arrowIcon = document.getElementById('dropdown-arrow');

        if (dropdownMenu && !dropdownMenu.contains(e.target) && !e.target.closest('.dropdown')) {
            dropdownMenu.classList.add('hidden');
            arrowIcon.classList.remove('fa-chevron-up');
            arrowIcon.classList.add('fa-chevron-down');
        }
    });
</script>
