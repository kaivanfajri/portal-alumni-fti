<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daftar Lowongan Kerja yang Disetujui</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.10.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://kit.fontawesome.com/4e5b6b6e8b.js" crossorigin="anonymous"></script>
</head>
<body class="bg-gradient-to-br from-green-50 to-green-100 min-h-screen">
    <%- include('../partials/navbar') %>
    <div class="container mx-auto px-4 py-10">
        <h1 class="text-4xl font-bold text-center mb-10 text-green-800">Daftar Lowongan Kerja</h1>

        <% if (jobs.length === 0) { %>
            <div class="text-center text-gray-500 py-16 text-lg">Belum ada lowongan kerja yang disetujui.</div>
        <% } %>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% jobs.forEach(job => { %>
                <div class="card bg-white border-2 border-green-300 shadow-xl hover:shadow-2xl transition-all duration-300 rounded-xl overflow-hidden">
                    <% if (job.gambar) { %>
                        <img src="/uploads/<%= job.gambar %>" alt="Logo" class="w-full h-32 object-contain bg-green-50 p-2 border-b">
                    <% } else { %>
                        <div class="w-full h-32 flex items-center justify-center bg-green-50 border-b">
                            <i class="fas fa-building text-4xl text-green-300"></i>
                        </div>
                    <% } %>
                    <div class="card-body p-6">
                        <h3 class="card-title text-xl font-bold mb-1 text-green-800"><%= job.judul_lowongan %></h3>
                        <% if (job.nama_perusahaan) { %>
                            <div class="text-green-700 font-semibold mb-2 flex items-center"><i class="fas fa-briefcase mr-2"></i> <%= job.nama_perusahaan %></div>
                        <% } %>
                        <div class="flex flex-wrap gap-2 mb-3">
                            <span class="badge bg-green-100 text-green-800 border-green-400 font-semibold px-3 py-1"><%= job.nama_kategori %></span>
                            <% if (job.lokasi) { %>
                                <span class="badge bg-blue-100 text-blue-800 border-blue-400 px-3 py-1"><i class="fas fa-map-marker-alt mr-1"></i> <%= job.lokasi %></span>
                            <% } %>
                        </div>
                        <p class="text-gray-700 mb-4 line-clamp-3 min-h-[60px]"> <%= job.deskripsi %> </p>
                        <div class="flex items-center justify-between mt-4">
                            <span class="text-sm text-gray-500"><i class="fas fa-calendar-alt mr-1"></i> <%= job.created_at ? job.created_at.toLocaleDateString ? job.created_at.toLocaleDateString() : job.created_at.substring(0,10) : '' %></span>
                            
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>
