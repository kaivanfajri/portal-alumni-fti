<!DOCTYPE html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Tracer Study | Portal Alumni</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
        <link href="https://cdn.jsdelivr.net/npm/daisyui@3.9.2/dist/full.css" rel="stylesheet" type="text/css" />
    </head>
    <body class="bg-gradient-to-br from-green-50 to-green-100 min-h-screen">
        <%- include('alumni-partials/navbar') %>

        <div class="container mx-auto px-4 py-8">
            <div class="max-w-4xl mx-auto">
                <div class="flex items-center mb-6">
                    <a href="/alumni/dashboard" class="text-green-600 hover:text-green-700 mr-4">
                        <i class="fas fa-arrow-left text-xl"></i>
                    </a>
                    <h1 class="text-2xl font-bold text-gray-800"><i class="fas fa-chart-line mr-2"></i>Tracer Study Alumni</h1>
                </div>

                <div class="bg-white rounded-lg shadow-md p-6">
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold text-gray-800 mb-2">Survei Pelacakan Alumni</h2>
                        <p class="text-gray-600">Mohon lengkapi data tracer study ini untuk membantu kampus dalam evaluasi dan pengembangan program studi.</p>
                    </div>

                    <form id="tracerStudyForm" action="/alumni/tracerStudy" method="POST">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Status Kerja -->
                            <div class="md:col-span-2">
                                <label class="block text-sm font-medium text-gray-700 mb-2"> Status Kerja Saat Ini <span class="text-red-500">*</span> </label>
                                <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                                    <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50 status-option">
                                        <input type="radio" name="status_kerja" value="bekerja" class="mr-2" required />
                                        <span class="text-sm">Bekerja</span>
                                    </label>
                                    <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50 status-option">
                                        <input type="radio" name="status_kerja" value="wirausaha" class="mr-2" required />
                                        <span class="text-sm">Wirausaha</span>
                                    </label>
                                    <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50 status-option">
                                        <input type="radio" name="status_kerja" value="belum_kerja" class="mr-2" required />
                                        <span class="text-sm">Belum Kerja</span>
                                    </label>
                                    <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50 status-option">
                                        <input type="radio" name="status_kerja" value="melanjutkan_studi" class="mr-2" required />
                                        <span class="text-sm">Melanjutkan Studi</span>
                                    </label>
                                </div>
                            </div>

                            <!-- Fields untuk yang bekerja/wirausaha -->
                            <div id="workFields" class="md:col-span-2 hidden">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <!-- Nama Perusahaan -->
                                    <div>
                                        <label for="nama_perusahaan" class="block text-sm font-medium text-gray-700 mb-2"> Nama Perusahaan/Instansi </label>
                                        <input
                                            type="text"
                                            id="nama_perusahaan"
                                            name="nama_perusahaan"
                                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                                            placeholder="Masukkan nama perusahaan" />
                                    </div>

                                    <!-- Posisi -->
                                    <div>
                                        <label for="posisi" class="block text-sm font-medium text-gray-700 mb-2"> Posisi/Jabatan </label>
                                        <input
                                            type="text"
                                            id="posisi"
                                            name="posisi"
                                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                                            placeholder="Masukkan posisi/jabatan" />
                                    </div>

                                    <!-- Lama Tunggu Kerja -->
                                    <div>
                                        <label for="lama_tunggu_kerja" class="block text-sm font-medium text-gray-700 mb-2"> Lama Menunggu Pekerjaan (bulan) </label>
                                        <input
                                            type="number"
                                            id="lama_tunggu_kerja"
                                            name="lama_tunggu_kerja"
                                            min="0"
                                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                                            placeholder="Contoh: 3" />
                                    </div>

                                    <!-- Sesuai Bidang -->
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2"> Pekerjaan Sesuai Bidang Studi? </label>
                                        <div class="flex gap-4">
                                            <label class="flex items-center">
                                                <input type="radio" name="sesuai_bidang" value="ya" class="mr-2" />
                                                <span class="text-sm">Ya</span>
                                            </label>
                                            <label class="flex items-center">
                                                <input type="radio" name="sesuai_bidang" value="tidak" class="mr-2" />
                                                <span class="text-sm">Tidak</span>
                                            </label>
                                        </div>
                                    </div>

                                    <!-- Range Gaji -->
                                    <div class="md:col-span-2">
                                        <label class="block text-sm font-medium text-gray-700 mb-2"> Range Gaji </label>
                                        <div class="grid grid-cols-2 md:grid-cols-5 gap-3">
                                            <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50">
                                                <input type="radio" name="gaji_range" value="< 3jt" class="mr-2" />
                                                <span class="text-sm">< 3 Juta</span>
                                            </label>
                                            <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50">
                                                <input type="radio" name="gaji_range" value="3-5jt" class="mr-2" />
                                                <span class="text-sm">3-5 Juta</span>
                                            </label>
                                            <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50">
                                                <input type="radio" name="gaji_range" value="5-8jt" class="mr-2" />
                                                <span class="text-sm">5-8 Juta</span>
                                            </label>
                                            <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50">
                                                <input type="radio" name="gaji_range" value="8-12jt" class="mr-2" />
                                                <span class="text-sm">8-12 Juta</span>
                                            </label>
                                            <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50">
                                                <input type="radio" name="gaji_range" value="> 12jt" class="mr-2" />
                                                <span class="text-sm">> 12 Juta</span>
                                            </label>
                                        </div>
                                    </div>

                                    <!-- Kepuasan Kerja -->
                                    <div class="md:col-span-2">
                                        <label class="block text-sm font-medium text-gray-700 mb-2"> Tingkat Kepuasan Kerja </label>
                                        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                                            <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50">
                                                <input type="radio" name="kepuasan_kerja" value="sangat_puas" class="mr-2" />
                                                <span class="text-sm">Sangat Puas</span>
                                            </label>
                                            <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50">
                                                <input type="radio" name="kepuasan_kerja" value="puas" class="mr-2" />
                                                <span class="text-sm">Puas</span>
                                            </label>
                                            <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50">
                                                <input type="radio" name="kepuasan_kerja" value="cukup" class="mr-2" />
                                                <span class="text-sm">Cukup</span>
                                            </label>
                                            <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50">
                                                <input type="radio" name="kepuasan_kerja" value="kurang_puas" class="mr-2" />
                                                <span class="text-sm">Kurang Puas</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Saran untuk Kampus -->
                            <div class="md:col-span-2">
                                <label for="saran_kampus" class="block text-sm font-medium text-gray-700 mb-2"> Saran untuk Pengembangan Kampus </label>
                                <textarea
                                    id="saran_kampus"
                                    name="saran_kampus"
                                    rows="4"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                                    placeholder="Berikan saran Anda untuk pengembangan kampus dan program studi..."></textarea>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="mt-8 flex justify-end space-x-4">
                            <a href="/alumni/dashboard" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors"> Batal </a>
                            <button type="submit" class="px-6 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors"><i class="fas fa-save mr-2"></i>Simpan Tracer Study</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <%- include('alumni-partials/footer') %>

        <script>
            // Toggle work fields based on status kerja
            document.querySelectorAll('input[name="status_kerja"]').forEach((radio) => {
                radio.addEventListener('change', function () {
                    const workFields = document.getElementById('workFields');
                    const requiredFields = workFields.querySelectorAll('input[required], select[required]');

                    if (this.value === 'bekerja' || this.value === 'wirausaha') {
                        workFields.classList.remove('hidden');
                        // Make work fields required
                        requiredFields.forEach((field) => field.setAttribute('required', 'required'));
                    } else {
                        workFields.classList.add('hidden');
                        // Remove required attribute and clear values
                        requiredFields.forEach((field) => {
                            field.removeAttribute('required');
                            if (field.type === 'radio') {
                                field.checked = false;
                            } else {
                                field.value = '';
                            }
                        });
                    }
                });
            });

            // Form submission
            document.getElementById('tracerStudyForm').addEventListener('submit', function (e) {
                e.preventDefault();

                // Basic validation
                const statusKerja = document.querySelector('input[name="status_kerja"]:checked');
                if (!statusKerja) {
                    alert('Mohon pilih status kerja Anda');
                    return;
                }

                // Show loading state
                const submitBtn = this.querySelector('button[type="submit"]');
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Menyimpan...';
                submitBtn.disabled = true;

                // Submit form
                fetch('/alumni/tracerStudy', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(Object.fromEntries(new FormData(this))),
                })
                    .then((response) => response.json())
                    .then((data) => {
                        if (data.success) {
                            alert('Tracer study berhasil disimpan!');
                            window.location.href = '/alumni/dashboard';
                        } else {
                            alert(data.message || 'Gagal menyimpan tracer study');
                            submitBtn.innerHTML = originalText;
                            submitBtn.disabled = false;
                        }
                    })
                    .catch((error) => {
                        console.error('Error:', error);
                        alert('Terjadi kesalahan saat menyimpan data');
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                    });
            });

            // Visual feedback for radio buttons
            document.querySelectorAll('input[type="radio"]').forEach((radio) => {
                radio.addEventListener('change', function () {
                    // Remove selected class from siblings
                    const name = this.name;
                    document.querySelectorAll(`input[name="${name}"]`).forEach((sibling) => {
                        sibling.closest('label').classList.remove('bg-green-50', 'border-green-500', 'text-green-700');
                    });

                    // Add selected class to current
                    this.closest('label').classList.add('bg-green-50', 'border-green-500', 'text-green-700');
                });
            });
        </script>
    </body>
</html>
