<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detail Album - <%= album.judul %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.10.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-green-50 to-green-100 min-h-screen">
    <%- include('alumni-partials/navbar', { alumni }) %>

    <div class="container mx-auto px-6 py-8">
        <!-- Header Section -->
        <div class="mb-8">
            <a href="/alumni/gallery" class="text-green-700 hover:underline flex items-center mb-4">
                <i class="fas fa-arrow-left mr-2"></i> Kembali ke Daftar Album
            </a>
            <div class="bg-white rounded-xl shadow-lg p-6 flex flex-col md:flex-row gap-6 items-center">
                <div class="flex-shrink-0">
                    <div class="w-32 h-32 rounded-lg bg-gray-200 flex items-center justify-center overflow-hidden">
                        <% 
                            // Cari cover foto
                            let cover = null;
                            if (photos && photos.length > 0) {
                                cover = photos[photos.length-1].file_path;
                            }
                        %>
                        <% if (cover) { %>
                            <img src="<%= cover %>" alt="Cover Album" class="object-cover w-full h-full" />
                        <% } else { %>
                            <i class="fas fa-image text-5xl text-gray-400"></i>
                        <% } %>
                    </div>
                </div>
                <div class="flex-1">
                    <h1 class="text-3xl font-bold text-green-700 mb-2"><%= album.judul %></h1>
                    <div class="text-gray-600 mb-2">
                        <i class="fas fa-calendar mr-1"></i>
                        Dibuat: <%= new Date(album.tanggal_dibuat).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                        <% if (album.tanggal_kegiatan) { %>
                            <span class="ml-4">
                                <i class="fas fa-calendar-check mr-1"></i>
                                Kegiatan: <%= new Date(album.tanggal_kegiatan).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                            </span>
                        <% } %>
                    </div>
                    <% if (album.deskripsi) { %>
                        <div class="text-gray-700 mb-2"><%= album.deskripsi %></div>
                    <% } %>
                    <div class="badge badge-outline badge-sm">
                        <i class="fas fa-camera mr-1"></i>
                        <%= photos.length %> Foto
                    </div>
                </div>
            </div>
        </div>

        <!-- Photos Grid -->
        <div class="mb-8">
            <h2 class="text-2xl font-semibold text-green-700 mb-4">Foto-foto Album</h2>
            <% if (photos && photos.length > 0) { %>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    <% photos.forEach(photo => { %>
                        <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col">
                            <div class="aspect-w-1 aspect-h-1 bg-gray-100">
                                <img src="<%= photo.file_path %>" alt="Foto Album" class="object-cover w-full h-48" loading="lazy" />
                            </div>
                            <div class="p-4 flex-1 flex flex-col">
                                <% if (photo.keterangan) { %>
                                    <div class="text-gray-700 text-sm mb-2"><%= photo.keterangan %></div>
                                <% } %>
                                <div class="text-xs text-gray-500 mt-auto">
                                    <i class="fas fa-calendar mr-1"></i>
                                    <%= new Date(photo.tanggal_dibuat).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="text-center py-12 text-gray-400">
                    <i class="fas fa-image text-6xl mb-4"></i>
                    <div class="text-lg">Belum ada foto di album ini.</div>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('alumni-partials/footer') %>
</body>