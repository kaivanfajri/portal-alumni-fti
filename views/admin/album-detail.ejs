<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detail Album - Portal Alumni</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.10.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .photo-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 1rem;
        }
        .photo-item {
            position: relative;
            border-radius: 0.5rem;
            overflow: hidden;
            transition: transform 0.3s;
        }
        .photo-item:hover {
            transform: scale(1.03);
        }
        .photo-item img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }
        .photo-actions {
            position: absolute;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.5);
            opacity: 0;
            transition: opacity 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }
        .photo-item:hover .photo-actions {
            opacity: 1;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-green-50 to-green-100 min-h-screen">
    <!-- Navbar -->
    <%- include('admin-partials/navbar') %>

    <div class="container mx-auto px-6 py-8">
        <!-- Header Section -->
        <div class="text-center mb-10">
            <div class="flex items-center justify-center mb-4">
                <div class="w-16 h-16 rounded-full bg-green-600 flex items-center justify-center mr-4">
                    <i class="fas fa-images text-white text-2xl"></i>
                </div>
                <div>
                    <h1 class="text-4xl font-bold text-green-700">Detail Album</h1>
                    <p class="text-lg text-green-600 mt-2"><%= album.judul %></p>
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex justify-center gap-4 mt-6">
                <a href="/admin/gallery/albums/<%= album.id %>/upload" class="btn btn-primary">
                    <i class="fas fa-plus mr-2"></i>Tambah Foto
                </a>
                <a href="/admin/gallery/albums/<%= album.id %>/edit" class="btn btn-warning">
                    <i class="fas fa-edit mr-2"></i>Edit Album
                </a>
                <button onclick="deleteAlbum('<%= album.id %>')" class="btn btn-error">
                    <i class="fas fa-trash mr-2"></i>Hapus Album
                </button>
            </div>
        </div>

        <!-- Album Info -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="md:col-span-2">
                    <h2 class="text-2xl font-semibold mb-2"><%= album.judul %></h2>
                    <p class="text-gray-700 mb-4"><%= album.deskripsi || 'Tidak ada deskripsi' %></p>
                    
                    <div class="flex flex-wrap gap-4">
                        <div class="badge badge-info">
                            <i class="fas fa-user mr-1"></i> Dibuat oleh: <%= album.dibuat_oleh_nama %>
                        </div>
                        <div class="badge badge-info">
                            <i class="fas fa-calendar mr-1"></i> Dibuat: 
                            <%= new Date(album.tanggal_dibuat).toLocaleDateString('id-ID') %>
                        </div>
                        <% if (album.tanggal_kegiatan) { %>
                            <div class="badge badge-info">
                                <i class="fas fa-calendar-check mr-1"></i> Kegiatan: 
                                <%= new Date(album.tanggal_kegiatan).toLocaleDateString('id-ID') %>
                            </div>
                        <% } %>
                        <div class="badge <%= album.status === 'aktif' ? 'badge-success' : 'badge-warning' %>">
                            <%= album.status === 'aktif' ? 'Aktif' : 'Nonaktif' %>
                        </div>
                    </div>
                </div>
                
                <div class="stats shadow">
                    <div class="stat">
                        <div class="stat-title">Total Foto</div>
                        <div class="stat-value text-primary"><%= photos.length %></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Photos Grid -->
        <div class="bg-white rounded-xl shadow-lg p-6">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-semibold">
                    <i class="fas fa-images mr-2"></i>Daftar Foto (<%= photos.length %>)
                </h3>
                
                <div class="flex gap-2">
                    <select id="sortPhotos" class="select select-bordered select-sm">
                        <option value="newest">Terbaru</option>
                        <option value="oldest">Terlama</option>
                    </select>
                </div>
            </div>
            
            <% if (photos.length > 0) { %>
                <div class="photo-grid">
                    <% photos.forEach(photo => { %>
                        <div class="photo-item" data-date="<%= new Date(photo.tanggal_dibuat).getTime() %>">
                            <img src="<%= photo.file_path %>" alt="Foto Album">
                            <div class="photo-actions">
                                <a href="<%= photo.file_path %>" target="_blank" class="btn btn-sm btn-info">
                                    <i class="fas fa-expand"></i>
                                </a>
                                <button onclick="deletePhoto('<%= photo.id %>')" class="btn btn-sm btn-error">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                            <% if (photo.keterangan) { %>
                                <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-70 text-white p-2 text-sm">
                                    <%= photo.keterangan %>
                                </div>
                            <% } %>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center py-12">
                    <div class="text-gray-400 mb-4">
                        <i class="fas fa-image text-6xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-600 mb-2">Belum Ada Foto</h3>
                    <p class="text-gray-500">Tambahkan foto pertama untuk album ini</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <%- include('admin-partials/footer') %>

    <!-- JavaScript -->
    <script>
        // Delete Photo
        function deletePhoto(photoId) {
            if (confirm('Apakah Anda yakin ingin menghapus foto ini?')) {
                fetch(`/admin/gallery/photos/${photoId}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Gagal menghapus foto');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat menghapus foto');
                });
            }
        }

        // Delete Album
        function deleteAlbum(albumId) {
            if (confirm('Apakah Anda yakin ingin menghapus album ini beserta semua fotonya?')) {
                fetch(`/admin/gallery/albums/${albumId}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/admin/gallery/albums';
                    } else {
                        alert('Gagal menghapus album');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat menghapus album');
                });
            }
        }

        // Sort Photos
        document.getElementById('sortPhotos').addEventListener('change', function() {
            const container = document.querySelector('.photo-grid');
            const items = Array.from(container.children);
            
            items.sort((a, b) => {
                if (this.value === 'oldest') {
                    return 1;
                } else {
                    return -1;
                }
            });
            
            items.forEach(item => container.appendChild(item));
        });
    </script>
</body>
</html>