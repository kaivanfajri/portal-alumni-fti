<!DOCTYPE html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://cdn.tailwindcss.com"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/daisyui@3.8.0/dist/full.css" rel="stylesheet" />
        <title>Kelola Forum Diskusi - Admin</title>
        <script>
            tailwind.config = {
                theme: {
                    extend: {
                        colors: {
                            greenSoft: '#F0F8F0',
                            greenFTI: '#166534',
                        },
                    },
                },
                daisyui: {
                    themes: ['light'],
                },
            };
        </script>
    </head>
    <body class="bg-greenSoft min-h-screen">
        <%- include('admin-partials/navbar') %>

        <section class="py-16 px-8 max-w-6xl mx-auto">

            <div class="bg-white shadow-md rounded-md overflow-hidden">
                <table class="table w-full">
                    <thead>
                        <tr>
                            <th class="bg-greenFTI text-white">No</th>
                            <th class="bg-greenFTI text-white">NIM</th>
                            <th class="bg-greenFTI text-white">Judul</th>
                            <th class="bg-greenFTI text-white">Isi</th>
                            <th class="bg-greenFTI text-white">Gambar</th>
                            <th class="bg-greenFTI text-white">Kategori</th>
                            <th class="bg-greenFTI text-white">Status</th>
                            <th class="bg-greenFTI text-white">Tanggal Dibuat</th>
                            <th class="bg-greenFTI text-white">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (forumList.length === 0) { %>
                        <tr>
                            <td colspan="10" class="text-center py-4">Tidak ada data</td>
                        </tr>
                        <% } %> <% forumList.forEach((item, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= item.nim %></td>
                            <td><%= item.judul %></td>
                            <td><%= item.isi %></td>
                            <td><img src="/uploads/<%= item.gambar %>" class="w-20" alt="Forum Image"></td>
                            <td><%= item.kategori %></td>
                            <td>
                                <span class="badge <%= item.status === 'aktif' ? 'badge-success' : 'badge-error' %>"> <%= item.status %> </span>
                            </td>
                            <td><%= new Date(item.tanggal_dibuat).toLocaleDateString('id-ID') %></td>
                            <td>
                                <div class="flex space-x-2">
                                    <a href="/admin/forum-diskusi/edit/<%= item.id %>" class="btn btn-sm btn-info text-white">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="POST" action="/admin/forum-diskusi/delete/<%= item.id %>" onsubmit="return confirm('Apakah Anda yakin ingin menghapus?')">
                                        <button type="submit" class="btn btn-sm btn-error text-white">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>

        <%- include('admin-partials/footer') %>
    </body>
</html>
