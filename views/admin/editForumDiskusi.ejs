<!DOCTYPE html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://cdn.tailwindcss.com"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/daisyui@3.8.0/dist/full.css" rel="stylesheet" />
        <title>Edit Forum Diskusi - Admin</title>
        <script>
            tailwind.config = {
                theme: {
                    extend: {
                        colors: {
                            greenSoft: '#F0F8F0',
                            greenFTI: '#166534',
                        },
                    },
                },
                daisyui: {
                    themes: ['light'],
                },
            };
        </script>
    </head>
    <body class="bg-greenSoft min-h-screen">
        <%- include('admin-partials/navbar') %>

        <section class="py-16 px-8 max-w-4xl mx-auto">
            <div class="flex items-center mb-6">
                <a href="/admin/forum-diskusi" class="btn btn-ghost mr-4">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h2 class="text-3xl font-bold text-greenFTI">Edit Forum Diskusi</h2>
            </div>

            <% if (error_msg && error_msg.length > 0) { %>
                <div class="alert alert-error mb-6">
                    <div class="flex-1">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-6 h-6 mx-2 stroke-current"> 
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>                          
                        </svg> 
                        <label><%= error_msg %></label>
                    </div>
                </div>
            <% } %>

            <form class="bg-white shadow-md rounded-md p-8 space-y-6" method="POST" action="/admin/forum-diskusi/edit/<%= forum.id %>" enctype="multipart/form-data">
                <!-- Alumni ID (hidden) -->
                <input type="hidden" name="alumni_id" value="<%= forum.alumni_id %>">
                
                <!-- Judul -->
                <div>
                    <label class="font-semibold block mb-1 text-black">Judul</label>
                    <input type="text" name="judul" placeholder="Judul forum diskusi" class="input input-bordered w-full bg-gray-100" 
                        value="<%= forum.judul %>" required />
                </div>

                <!-- Current Image -->
                <% if (forum.gambar) { %>
                    <div>
                        <label class="font-semibold block mb-1 text-black">Gambar Saat Ini</label>
                        <img src="/uploads/<%= forum.gambar %>" alt="Gambar" class="h-32 object-cover rounded-md">
                        <input type="hidden" name="gambar_lama" value="<%= forum.gambar %>">
                    </div>
                <% } %>

                
                <!-- Upload Gambar -->
                <div>
                    <label class="font-semibold block mb-1 text-black">Ganti Gambar (Opsional)</label>
                    <input type="file" name="gambar" class="file-input file-input-bordered w-full bg-white" accept="image/*" />
                    <p class="text-sm text-gray-500 mt-1">Format: JPG, PNG. Maksimal 2MB</p>
                </div>

                
                <!-- Isi -->
                <div>
                    <label class="font-semibold block mb-1 text-black">Isi</label>
                    <textarea name="isi" rows="4" placeholder="Isi forum ini..." class="textarea textarea-bordered w-full bg-gray-100"><%= forum.isi %></textarea>
                </div>

                <!-- Kategori -->
                <div>
                    <label class="font-semibold block mb-1 text-black">Kategori</label>
                    <select name="kategori" class="select select-bordered w-full bg-gray-100" required>
                        <option value="diskusi_umum" <%= forum.status === 'diskusi_umum' ? 'selected' : '' %>>Diskusi Umum</option>
                        <option value="karir" <%= forum.status === 'karir' ? 'selected' : '' %>>Karir</option>
                        <option value="teknologi" <%= forum.status === 'teknologi' ? 'selected' : '' %>>Teknologi</option>
                        <option value="akademik" <%= forum.status === 'akademik' ? 'selected' : '' %>>Akademik </option>
                        <option value="lainnya" <%= forum.status === 'lainnya' ? 'selected' : '' %>>Lainnya </option>
                    </select>
                </div>

                <!-- Status -->
                <div>
                    <label class="font-semibold block mb-1 text-black">Status</label>
                    <select name="status" class="select select-bordered w-full bg-gray-100" required>
                        <option value="draft" <%= forum.status === 'draft' ? 'selected' : '' %>>Draft</option>
                        <option value="disetujui" <%= forum.status === 'disetujui' ? 'selected' : '' %>>Disetujui</option>
                        <option value="pending" <%= forum.status === 'pending' ? 'selected' : '' %>>Pending</option>
                        <option value="ditolak" <%= forum.status === 'ditolak' ? 'selected' : '' %>>Ditolak </option>
                    </select>
                </div>


                <!-- Tombol Submit -->
                <div class="flex justify-end space-x-4">
                    <a href="/admin/forum-diskusi" class="btn btn-ghost">Batal</a>
                    <button type="submit" class="btn bg-greenFTI text-white hover:bg-green-800">
                        <i class="fas fa-save mr-2"></i>Simpan Perubahan
                    </button>
                </div>
            </form>
        </section>

        <%- include('admin-partials/footer') %>
    </body>
</html>
